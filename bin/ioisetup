#!/bin/bash

DISTSERVER="https://app.zitseng.com/lzs/ioivpn-dist/"

ZENARG='--width=300'
ZENTITLE='--title=IOI Setup'

USERID=

main()
{
	if check_user; then
		read -d '' -r MSG<<-EOM
			This system is already configured for: <b>$USERID</b>\n
			Do you want to reconfigure to another IOI user?
			EOM
		zenity "$ZENTITLE" $ZENARG --question \
			--text "$MSG"
		if [ $? -eq 1 ]; then
			read -d '' -r MSG<<-EOM
				Keeping cnofiguration for: <b>$USERID</b>\n
				EOM
			zenity "$ZENTITLE" $ZENARG --info \
				--text "$MSG"
			exit 1
		fi
	fi

	while true; do
		do_setup
		if [ $? -eq 1 ]; then
			break
		fi
	done
}

do_setup()
{

	CRED=$(zenity "$ZENTITLE" $ZENARG \
		--forms --text "Enter Contestant Credentials" \
		--add-entry=UserID: \
		--add-password=Password:
	)

	if [ $? -eq 1 ]; then
		return 1
	fi

	echo wget -O /tmp/vpn.tar.bz2 "${DISTSERVER}$CRED" > /dev/null 2>&1
	wget -O /tmp/vpn.tar.bz2 "${DISTSERVER}$CRED" > /dev/null 2>&1
	RC=$?
	if [ $RC -eq 8 ]; then
		read -d '' -r MSG<<-EOM
			Contest Server returns an error.\n
			This is most likely due to an error in your credentials. Please try again.
			EOM
		zenity "$ZENTITLE" $ZENARG \
			--error \
			--text "$MSG"
		return 2
	fi

	sudo /opt/ioi/bin/vpn.sh config /tmp/vpn.tar.bz2
	sudo /opt/ioi/bin/vpn.sh restart

	return 1

}

check_user()
{
	USERID=$(/opt/ioi/bin/ioicheckuser -q)
	return $?
}


check_vpn()
{

	# Try one ping
	if ping -c 1 10.10.0.1 -q > /dev/null; then
		return 0
	fi

	# Then try 3 pings before we declare fail
	if ping -c 3 10.10.0.1 -q > /dev/null; then
		return 0
	fi

	return 1
}

stop_vpn()
{
	sudo /opt/ioi/bin/tinc.sh stop
}

main "$@"; exit

# vim: ft=sh ts=4 sw=4 noet
